@model OnlineShoping.Models.ModelAddProduct
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <div class="navbar-header">

        </div>
        <ul class="nav navbar-nav">
            <a href="/Admin/ListProduct">
                <button class="active btn btn-lg navbar-btn" style="background-color: #00b1b6">
                    <span style="color: white;">List Product</span>
                </button>
                <!--<li class="active"><a href="/admin/category/listcategory">List Category</a></li>-->
            </a>
            <a href="/Admin/AddProduct">

                <button class="btn btn-lg navbar-btn" style="background-color: #ff0072">

                    <span style="color: white;">Add Product</span>
                </button>
            </a>
        </ul>
    </div>
</nav>
<div class="templatemo-content-container">
    <div class="templatemo-content-widget white-bg">
        <h2 class="margin-bottom-10">Products</h2>
        <p>Please tell me product's information</p>
        <form action="/admin/addproductsubmit" class="templatemo-login-form" method="post" enctype="multipart/form-data">


            <label class="control-label templatemo-block" for="image">Image</label>
            <!-- <input type="file" name="fileToUpload" id="fileToUpload" class="margin-bottom-10"> -->
            <input type="file" accept="image/*" name="file" class="filestyle" data-buttonName="btn-primary" data-buttonBefore="true" data-icon="false" enctype='multipart/form-data'>
            <p>Maximum upload size is 5 MB.</p>

            <div class="row form-group">
                <div class="col-lg-6 col-md-6 form-group">
                    <label for="inputProductName">Product Name</label>
                    <input type="text" name="product_name" class="form-control" id="inputProductName" placeholder="..." required>
                </div>
                <div class="col-lg-6 col-md-6 form-group">
                    <label for="inputPrice">Price (USD)</label>
                    <input type="text" name="product_price" class="form-control"
                           onkeypress='return (event.charCode >= 48 && event.charCode <= 57) || event.charCode == 46'
                           id="inputPrice" placeholder="..." required>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-lg-12 form-group">
                    <label class="control-label" for="inputNote1">Description</label>
                    <textarea class="form-control" id="inputNote1" name="product_description" rows="2" required></textarea>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-lg-6 col-md-6 form-group">
                    <label class="control-label templatemo-block">Category</label>
                    <select name='product_type' class="form-control">
                        @foreach (var item in Model.Types)
                        {
                            @:
                            <option value=@item.Id.ToString()>@item.Name</option>
                        }
                    </select>
                </div>
                <div class="col-lg-6 col-md-6 form-group">
                    <label class="control-label templatemo-block">Publisher</label>
                    <select name='product_manufacturer' class="form-control">
                        @foreach (var item in Model.Manufacturers)
                        {
                            @:
                            <option value="@item.Id.ToString()">@item.Name</option>
                        }


                    </select>
                </div>
            </div>

            <div class="row form-group">
                <div class="col-lg-12 form-group">
                    <label class="control-label" for="inputNote">Technical Parameter</label>
                    <textarea class="form-control" id="inputNote" name="product_technical_parameter" rows="3" required></textarea>
                </div>
            </div>


            <div class="form-group text-right">

                <button type="submit" class="templatemo-blue-button">Submit</button>
                <button type="reset" class="templatemo-white-button">Reset</button>
            </div>

        </form>

    </div>
</div>